				if(inputNext_category === ""){
				   return  swal("Error!", "Input is empty", "error");
				}
	
			
				
	
				sendDatas = {
							iconId:inputNext_music_id,
							iconName:inputNexticonTitle,
							iconLink:inputNext_category,
				}
				$.ajax({
				url:'/admin-update-sound',
				method:'POST',
				headers:{
						  'Content-Type':'application/json',
						},
					data: JSON.stringify(sendDatas),
