				function actionAdmin(action,adminId,manage) {
				var manage_id = adminId
	
				if(action === "suspend"){
				var manageAction = "suspended"
				}
				if(action === "activate"){
				var manageAction = "activated"
				}

				if(action === "delete"){
				var manageAction = "delete"
				}

				if(manage === "music"){
				var manageTable = "music"
				}
				if(manage === "admin"){
				var manageTable = "admin"
				}
				if(manage === "user"){
				var manageTable = "user"
				}

				if(manage === "deletemusic"){
				var manageTable = "deletemusic"
				}
	
					sendDatas = {
						manage_id:manage_id,
						manageAction: manageAction,
						manageTable:manageTable
				}
				$.ajax({
				url:'/admin-action',
				method:'POST',
				headers:{
						  'Content-Type':'application/json',
						},
					data: JSON.stringify(sendDatas),
						success:function(data)
						{
							if(data.error == "errorAction"){
									swal("Error!", "An error occured", "error");
							}
							if(data.success == "successAction"){	
								swal({
						title: "Success",
						text: "DONE",
						icon: "success",
						dangerMode: false,
					})
					.then((ok) => {
                        if(ok){	
					location.replace('/admin-icon')
						}
					})
							}
						}
				});
				}
	
	
