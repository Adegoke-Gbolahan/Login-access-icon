		<script>
		  	//binds to onchange event of your input field
			$("#musicFile").bind("change", function () {
				$("#fileError").css("display", "none")
            if (typeof ($("#musicFile")[0].files) != "undefined") {
                var size = parseFloat($("#musicFile")[0].files[0].size / 1024).toFixed(2);
				if(size > 500){
					$("#fileError").css("display", "block")
					return
				}
